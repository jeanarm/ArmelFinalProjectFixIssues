<p id="notice"><%= notice %></p>

<h1>Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Names</th>
      <th>Assignment</th>
      <th>Marks</th>
      <th>Average out of15</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.student_id %></td>
        <td><%= assignment.names %></td>
        <td><%= assignment.assignment %></td>
        <td><%= assignment.marks %></td>
        <td><%= assignment.calculate_marks_average %></td>
        <td><%= assignment.course.name %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
 
  </tbody>
</table>

<br>

