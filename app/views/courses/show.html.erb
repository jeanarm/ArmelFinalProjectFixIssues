<p id="notice"><%= notice %></p>

<p>
  <strong>Course code:</strong>
  <%= @course.code %>
</p>

<p>
  <strong>Name:</strong>
  <%= @course.name %>
</p>

<p>
  <strong>Credit:</strong>
  <%= @course.credit %>
</p>

<p>
  <strong>User:</strong>
  <%= @course.user.name %>
</p>

<p>
<h1><%= @course.name %>'s Grade</h1>
<% @course_assignments.each do |assignment| %>
 <%=assignment.student_id%>
 <%=assignment.names%>
 <%=assignment.course.name%>
 <%=assignment.calculate_marks_average%>
  <% end %>
</p>

<% @course.quizes.each do |quiz| %>
  <%=quiz.student_id%>
  <%=quiz.names%>
  <%=quiz.course.name%>
  <%=quiz.calculate_marks_average%>
   <% end %>
 </p>
 Mid Exam:<%= @course.exam.mid_exam %>
 Final EXam:<%=@course.exam.final_exam %>
 </p>




