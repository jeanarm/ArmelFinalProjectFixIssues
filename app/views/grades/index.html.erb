<p id="notice"><%= notice %></p>

<h1>Grades</h1>
<%= search_form_for @search do |f| %>  
  <%= f.label :student_id_cont, "Enter student id" %>
  <%= f.search_field :student_id_cont %>
  <%= f.submit%>
<% end %>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Student</th>
      <th>Names</th>
      <th>Assignment</th>
      <th>Quiz</th>
      <th>Mid semester</th>
      <th>Final exam</th>
      <th>Total out 100</th>
      <th>Total out 20</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.student_id %></td>
        <td><%= grade.names %></td>
        <td><%= grade.assignment %></td>
        <td><%= grade.quiz %></td>
        <td><%= grade.mid_semester %></td>
        <td><%= grade.final_exam %></td>
        <td><%= grade.total_out_100 %></td>
        <td><%= grade.total_out_20 %></td>
        <td><%= grade.course.name %></td>
        <td><%= link_to 'Show', grade, class:"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_grade_path(grade),class:"btn btn-warning" %></td>
        <td><%= link_to 'Delete', grade, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Grade', new_grade_path, class:"btn btn-success" %>
<%= paginate @grades%>