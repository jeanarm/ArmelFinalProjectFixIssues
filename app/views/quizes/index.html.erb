<p id="notice"><%= notice %></p>

<h1>Quizes</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Names</th>
      <th>Quiz</th>
      <th>Marks</th>
      <th>Average out of15</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizes.each do |quize| %>
      <tr>
        <td><%= quize.student_id %></td>
        <td><%= quize.names %></td>
        <td><%= quize.quiz %></td>
        <td><%= quize.marks %></td>
        <td><%= quize.calculate_marks_average %></td>
        <td><%= quize.course.name %></td>
        <td><%= link_to 'Show', quize %></td>
        <td><%= link_to 'Edit', edit_quize_path(quize) %></td>
        <td><%= link_to 'Destroy', quize, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

