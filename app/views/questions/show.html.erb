
<div class="card-body">
<div class="row" style="color:white;">
  <div class="col-md-4">
    <% if  @question.image.url %>
    <%=  image_tag @question.image.url  %>
    <% end %>
  </div>
  <div class="col-md-8">
    <p class="card-text">
      <strong>Title:</strong>
    <%= @question.title %>
    </p>
    <p class="card-text">
      <strong>Content:</strong>
      <%= @question.content %>
    </p>
    <p class="card-text">
      <strong>User:</strong>
      <%= @question.user.email %>
    </p>
    <p style="margin-bottom:2rem;"><%= link_to 'Back', questions_path, :"data-no-turbolink" => true, method: "get", class:"btn btn-outline-dark my-2 my-sm-0" %></p>
  </div>
</div>
</div>